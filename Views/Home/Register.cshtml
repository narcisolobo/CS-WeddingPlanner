@using WeddingPlanner.Models
@model User

@{
    ViewData["Title"] = "Wedding Planner";
}
<partial name="NavPartial"/>

<div class="container mt-3 w-50 bg-white p-3 border rounded">
  <form asp-action="ProcessRegistration" asp-controller="Home" method="POST" class="p-3">
    <h3 class="text-center mb-3">REGISTER</h3>
    <p class="text-center"><a href="/login">Already registered? Click here to login.</a></p>
    <hr>
    <div class="row">
      <div class="col">
        <label asp-for="FirstName" class="ml-1"></label>
        <input asp-for="FirstName" class="form-control" placeholder="First Name">
        <span asp-validation-for="FirstName" style="color:red;font-size:small;" class="ml-1"></span>
      </div>
      <div class="col">
        <label asp-for="LastName" class="ml-1"></label>
        <input asp-for="LastName" class="form-control" placeholder="Last Name">
        <span asp-validation-for="LastName" style="color:red;font-size:small;" class="ml-1"></span>
      </div>
    </div>
    <div class="row">
      <div class="col">
        <label asp-for="Email" class="ml-1"></label>
        <input asp-for="Email" class="form-control" placeholder="Email Address">
        <span asp-validation-for="Email" style="color:red;font-size:small;" class="ml-1"></span>
      </div>
    </div>
    <div class="row">
      <div class="col">
        <label asp-for="Password" class="ml-1"></label>
        <input asp-for="Password" class="form-control" placeholder="Password">
        <span asp-validation-for="Password" style="color:red;font-size:small;" class="ml-1"></span>
      </div>
      <div class="col">
        <label asp-for="ConfirmPassword" class="ml-1"></label>
        <input asp-for="ConfirmPassword" class="form-control" placeholder="Confirm Password">
        <span asp-validation-for="ConfirmPassword" style="color:red;font-size:small;" class="ml-1"></span>
      </div>
    </div>
    <button type="submit" class="btn btn-primary btn-block mt-2">REGISTER</button>
  </form>
</div>